<?xml version="1.0" encoding="UTF-8"?>

<project name="Desafio-Capgemini-2022" default="default" basedir=".">
    <description>Builds, tests, and runs the project Desafio-Capgemini-2022.</description>
    <import file="nbproject/build-impl.xml"/>
 
    <!-- Run jUnit -->
    <target name="junit" depends="resolve">

	<junit printsummary="yes" haltonfailure="no">

		<classpath refid="test.path" />
		<classpath location="${build.dir}" />
						
		<!-- Make sure these two libraries are included -->
		<classpath location="lib/junit-5.6.0.jar" />
		<classpath location="lib/hamcrest-core-1.3.jar" />
			
		<test name="com.mkyong.test.TestMessage" 
			haltonfailure="no" todir="${report.dir}" outfile="result">
			<formatter type="plain" />
			<formatter type="xml" />
		</test>

	</junit>
    </target>
    
</project>
